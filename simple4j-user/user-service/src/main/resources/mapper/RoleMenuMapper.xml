<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simple4j.user.dao.RoleMenuMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="roleMenuResultMap" type="com.simple4j.user.entity.RoleMenu">
		<id column="id" property="id"/>
		<result column="menu_id" property="menuId"/>
		<result column="role_id" property="roleId"/>
	</resultMap>

	<!-- 通用查询结果列 -->
	<select id="permissions" resultType="java.lang.String">
		select
		m.code
		from simple4j_role_menu rm join
		simple4j_menu m on rm.menu_id = m.id
		where
		rm.role_id in
		<foreach close=")" collection="roleIds" item="item" open="(" separator=",">
			#{item}
		</foreach>
		and rm.is_deleted = 0
		and m.is_deleted = 0
	</select>
	<sql id="baseColumnList">
        select
        id, menu_id, role_id, is_deleted
    </sql>

</mapper>
